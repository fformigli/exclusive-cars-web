<div class="container p-4">
    <div class="mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Usuarios</h3>
            </div>
            <div class="card-body">
                <div class="pb-3">
                    <button onclick="location.href='/users/add'" class="btn btn-success">
                        Nuevo Usuario
                    </button>
                </div>
                <table class="table">
                    <thead>
                    <th>Nombre Completo</th>
                    <th>Nro. Documento</th>
                    <th>Nickname</th>
                    <th>Rol</th>
                    <th>Creado</th>
                    <th></th>
                    </thead>
                    <tbody>
                    {{#each users}}
                        <tr onclick="editUser({{id}})">
                            <td>{{fullName}}</td>
                            <td>{{documentNumber}}</td>
                            <td>{{username}}</td>
                            <td>{{Role.name}}</td>
                            <td>{{timeAgo createdAt}}</td>
                            <td>
                                <button type="button" onclick="deleteUser({{id}});" class="btn btn-danger">
                                    Borrar
                                </button>
                            </td>
                        </tr>
                    {{else}}
                        {{> noElements}}
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function deleteUser(id) {
        event.stopPropagation()
        if (confirm('¿Está seguro de que desea eliminar el usuario?')) {
            location.href = '/users/delete/' + id;
        }
        return false
    }

    function editUser(id) {
        location.href = '/users/' + id;
        return false;
    }
</script>