<div class="container p-4">
    <div class="mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Roles</h3>
            </div>
            <div class="card-body">
                <div class="pb-3">
                    <button onclick="location.href='/roles/add'" class="btn btn-success">
                        Nuevo Rol
                    </button>
                </div>
                <table class="table">
                    <thead>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Contexto</th>
                    <th>Permisos</th>
                    <th>Usuarios</th>
                    <th></th>
                    </thead>
                    <tbody>
                    {{#each roles}}
                        <tr onclick="editRole({{id}})">
                            <td>{{id}}</td>
                            <td>{{name}}</td>
                            <td>{{contextLabel}}</td>
                            <td>{{Permissions.length}}</td>
                            <td>{{Users.length}}</td>
                            <td>
                                <button type="button" onclick="deleteRole({{id}});" class="btn btn-danger">
                                    Borrar
                                </button>
                            </td>
                        </tr>
                    {{else}}
                        {{> noElements}}
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function deleteRole(id) {
        event.stopPropagation()
        if (confirm('¿Está seguro de que desea eliminar el rol?')) {
            location.href = '/roles/delete/' + id;
        }
        return false
    }

    function editRole(id) {
        location.href = '/roles/' + id;
        return false;
    }
</script>