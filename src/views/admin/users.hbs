<div class="container p-4">
    <div class="mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <button onclick="location.href='/admin/users/add'" class="btn btn-success">
                        Nuevo Usuario
                    </button>
                </div>
                <table class="table">
                    <thead>
                    <th>Nombre Completo</th>
                    <th>Nickname</th>
                    <th>Rol</th>
                    <th>Creado</th>
                    <th></th>
                    </thead>
                    <tbody>
                    {{#each users}}
                        <tr>
                            <td>{{fullName}}</td>
                            <td>{{username}}</td>
                            <td>{{role.name}}</td>
                            <td>{{timeAgo createdAt}}</td>
                            <td>
                                <button onclick="eliminarUsuario({{id}});" class="btn btn-danger">
                                    Borrar
                                </button>
                            </td>
                        </tr>
                    {{else}}

                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function eliminarUsuario(id) {
        if (confirm('Â¿Esta seguro de que desea eliminar el usuario?'))
            location.href = '/admin/users/delete/' + id;
        return false;
    }
</script>