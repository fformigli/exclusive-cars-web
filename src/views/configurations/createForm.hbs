<div class="container p-4">
    <div class="mx-auto">
        <div class="card">
            <div class="card-header">
                {{#unless id}}
                    <h3>Nueva Configuración</h3>
                {{else}}
                    <h3>Editando Configuración</h3>
                {{/unless}}
            </div>
            <div class="card-body">
                <form action="/configurations/{{id}}" method="POST" autocomplete="off">
                    <div class="form-group">
                        <label>Tipo de Configuración</label>
                        <select name="configurationTypeId" class="custom-select" required>
                            {{#each configurationTypes}}
                                <option value="{{id}}" {{ selectedOption id ../configurationTypeId }}>{{description}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Nombre Corto</label>
                        <input type="text" name="shortName" placeholder="Nombre Corto" class="form-control"
                               autofocus required value="{{shortName}}">
                    </div>
                    <div class="form-group">
                        <label>Descripción</label>
                        <input type="text" name="name" placeholder="Descripción" class="form-control"
                               autocomplete="false" required value="{{name}}">
                    </div>
                    {{> formButtons}}
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/lib/js/validator.js"></script>