<div class="container p-4">
    <div class="mx-auto">
        <div class="card">
            <div class="card-header">
                <h3>Clientes</h3>
            </div>
            <div class="card-body">
                <div class="pb-3">
                    <button onclick="location.href='/clients/add'" class="btn btn-success">
                        Nuevo Cliente
                    </button>
                </div>
                <table class="table">
                    <thead>
                    <th>Nombre Completo</th>
                    <th>Nickname</th>
                    <th>Teléfono</th>
                    <th>Email</th>
                    <th>Creado</th>
                    <th></th>
                    </thead>
                    <tbody>
                    {{#each clients}}
                        <tr onclick="editClient({{id}})">
                            <td>{{User.fullName}}</td>
                            <td>{{User.username}}</td>
                            <td>{{phoneNumber}}</td>
                            <td>{{email}}</td>
                            <td>{{timeAgo createdAt}}</td>
                            <td>
                                <button type="button" onclick="deleteClient({{id}});" class="btn btn-danger">
                                    Borrar
                                </button>
                            </td>
                        </tr>
                    {{else}}
                        {{> noElements}}
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function deleteClient(id) {
        event.stopPropagation()
        if (confirm('¿Está seguro de que desea eliminar el cliente?')) {
            location.href = '/clients/delete/' + id;
        }
        return false
    }

    function editClient(id) {
        location.href = '/clients/' + id;
        return false;
    }
</script>